@model ChitChatRaitings.Models.Feedback

@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create" class='creation-form'>
    <h1 class='title'> Your Feedback</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label style="color:white" asp-for="Name" class="control-label" ></label>
        <input style="color:white" asp-for="Name" class="form-input" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label style="color:white" asp-for="Rate" class="control-label"></label>
        <input asp-for="Rate" class="form-input" />
        <span asp-validation-for="Rate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label style="color:white" asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-input" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="create-button" />
    </div>
    <a asp-action="Index">Back to List</a>
</form>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
